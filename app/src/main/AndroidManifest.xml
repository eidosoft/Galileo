<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eido.galileo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/galileoicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MapViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.contentactivity.WebContentViewer"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.contentactivity.ImageViewer"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.contentactivity.ViewerActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.BeaconTestActivity"
            android:label="@string/title_activity_beacon_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.BeaconTestActivity2"
            android:label="@string/title_activity_beacon_test2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.LanguageActivity" />
        <activity android:name=".activity.InfoViewActivity" />
        <activity android:name=".activity.ExplanationsViewActivity" />
        <activity
            android:name=".activity.BeaconTestActivity3"
            android:label="@string/title_activity_beacon_test3"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
